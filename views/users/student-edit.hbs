<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar</h1>
            <hr>
            
            <form action="/students/{{student._id}}/edit" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="emailInput" value="{{student.email}}" name="email">
                        <div class="form-text">Requerido.</div>
                    </div>
                    
                    
                </div>
                
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username" value="{{student.username}}">
                </div>
                
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg" value="{{student.profileImg}} ">
                    <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
                </div>
                
                <div class="mb-3">
                  <label for="descriptionInput" class="form-label">Descripción</label>
                  <textarea class="form-control" id="descriptionInput" rows="3" name="description" value="{{student.description}} "></textarea>
                </div>
                
                {{#if ../canChangeRole}}
                <div class="mb-3">
                  <label for="roleInput" class="form-label">Role
                    <select name="role" value="{{student.role}}">
                        <option value="STUDENT">STUDENT</option>
                        <option value="DEV">DEV</option>
                        <option value="TA">TA</option>
                        <option value="PM">PM</option>
                    </select>
                  </label>
                  
                  
                </div>

                {{/if}}

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Completar Edición</button>
                </div>
                
                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>
