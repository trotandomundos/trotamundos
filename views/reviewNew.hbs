<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Nueva reseña</title>
  </head>
  <body>
    <header>
      <h1>Nueva reseña</h1>
    </header>
    <main>
      <form action="/myExperiences/{{experienceId}}/reviews/new" method="POST" enctype="multipart/form-data">
        <div> 
          <label for="title">Título:</label>
          <input type="text" id="title" name="title" />
        </div>
        <div>
          <label for="comment">Comentario:</label>
          <textarea type="text" id="comment" name="comment" rows="10"></textarea>
        </div>
        <div>
          <label for="rating">Rating:</label>
          <input type="number" id="rating" name="rating" min="0" max="10"></input>
        </div>
         <div>
          <label for="imagen">Imágenes:</label>
          <input
            type="file"
            id="imagen"
            name="imagen"
            accept="image/*"
            max="5"
          />
        </div>
        

        <div>
          <button type="submit">Crear Reseña</button>
        </div>
      </form>
    </main>
  </body>
</html>